{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"alwaysStrict": true,
		"watch": true,
		"typeRoots": [
			"node_modules/@types/"
		]
	},
	"typeAcquisition": {
		"enable": true,
		"include": [
			"node"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
