{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": false,
		"alwaysStrict": true,
		"outDir": "./dist",
		"typeRoots": [
			"./typings",
			"./typings/globals"
		],
		"types": [
			"node"
		],
		"removeComments": true
	},
	"typeAcquisition": {
		"enable": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
